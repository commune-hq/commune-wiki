<!-- Pane container -->
<div id="pane-stack"></div>

<style>
  
  /* Andy-style panes - centered when single, side-by-side when multiple */
  #pane-stack {
    position: fixed; 
    top: 64px; 
    left: 0;
    right: 0;
    bottom: 0;
    height: calc(100vh - 64px);
    display: flex;
    justify-content: center; /* Center single pane */
    align-items: center;
    gap: 1.5rem; /* Space between panes */
    padding: 2rem;
    overflow-x: auto; 
    overflow-y: hidden;
    z-index: calc(var(--z-panes) + 1); 
    pointer-events: none;
    transition: all 0.2s ease;
  }
  
  #pane-stack::-webkit-scrollbar {
    height: 8px;
  }
  
  #pane-stack::-webkit-scrollbar-track {
    background: transparent;
  }
  
  #pane-stack::-webkit-scrollbar-thumb {
    background: var(--c-border);
    border-radius: 4px;
  }
  
  #pane-stack.active { 
    pointer-events: auto;
  }
  
  /* When multiple panes, align to start (left) instead of center */
  #pane-stack.multiple {
    justify-content: flex-start;
    align-items: stretch;
  }
  
  /* Individual pane - card-like appearance */
  .pane {
    pointer-events: auto;
    position: relative; /* For absolute positioning of close button */
    background: var(--c-bg);
    border: 2px solid var(--c-border);
    border-radius: var(--c-radius-lg);
    /* Strong card shadow for prominence */
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3),
                0 8px 24px rgba(0, 0, 0, 0.2);
    /* Single pane: centered modal-like */
    width: 700px;
    max-width: 90vw;
    max-height: 85vh;
    overflow-y: auto;
    overflow-x: hidden;
    flex-shrink: 0;
    flex-grow: 0;
    transition: all 0.2s ease;
  }
  
  /* Multiple panes: side-by-side, narrower */
  #pane-stack.multiple .pane {
    width: clamp(420px, 40vw, 520px);
    max-height: 90vh;
  }
  
  /* Close button - floating in top-right corner */
  .pane .close { 
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    width: 32px;
    height: 32px;
    background: var(--c-bg-soft);
    border: 1px solid var(--c-border);
    border-radius: var(--c-radius-sm); 
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 1.4rem; 
    line-height: 1;
    color: var(--c-text-muted);
    transition: all 0.15s ease;
  }
  
  .pane .close:hover { 
    background: var(--c-bg-muted); 
    color: var(--c-text);
    border-color: var(--c-border-focus);
  }
  
  .pane .body { 
    padding: 2rem 1.5rem;
    /* Optimal line length for readability */
    max-width: 70ch;
    margin: 0 auto;
  }
  
  /* Disable panes on mobile/tablet */
  @media (max-width: 1023px) {
    #pane-stack {
      display: none !important;
    }
  }
  
  /* Adjust for smaller desktops */
  @media (min-width: 1024px) and (max-width: 1279px) {
    #pane-stack.multiple .pane {
      width: clamp(380px, 45vw, 480px);
    }
    /* Hide 3rd pane on smaller screens */
    .pane:nth-child(n+3) {
      display: none;
    }
  }
</style>
