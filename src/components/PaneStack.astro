<div id="pane-stack"></div>
<style>
  /* Andy-style sliding panes - side by side */
  #pane-stack{
    position:fixed; 
    top:64px; 
    right:0; 
    bottom:0;
    height:calc(100vh - 64px);
    max-width:85vw;
    display:flex; 
    gap:0;
    padding:0;
    overflow-x:auto; 
    overflow-y:hidden;
    z-index:var(--z-panes); 
    pointer-events:none; 
    visibility:hidden;
    transition:visibility 0.2s;
    /* Hide scrollbar but keep functionality */
    scrollbar-width:none;
  }
  #pane-stack::-webkit-scrollbar{
    display:none;
  }
  #pane-stack.active{ 
    pointer-events:auto; 
    visibility:visible; 
  }
  
  .pane{
    pointer-events:auto; 
    background:var(--c-bg);
    border-left:1px solid var(--c-border); 
    box-shadow:-4px 0 16px rgba(0,0,0,0.1);
    min-width:450px;
    max-width:450px;
    width:450px;
    height:100%;
    overflow-y:auto;
    overflow-x:hidden;
    overscroll-behavior:contain;
    flex-shrink:0;
    isolation:isolate;
    transform:translateX(100%);
    animation:slideIn 0.25s ease forwards;
  }
  
  @keyframes slideIn{
    to{ transform:translateX(0); }
  }
  
  .pane header{ 
    display:flex; 
    justify-content:space-between; 
    align-items:center;
    padding:1rem 1.25rem; 
    border-bottom:1px solid var(--c-border);
    background:var(--c-bg-soft);
    position:sticky; 
    top:0; 
    z-index:10;
  }
  
  .pane header strong{
    font-size:1.1rem;
    font-weight:600;
    color:var(--c-text);
  }
  
  .pane .close{ 
    background:transparent; 
    border:1px solid var(--c-border-focus); 
    border-radius:var(--c-radius-sm); 
    padding:.35rem .7rem; 
    cursor:pointer;
    font-size:1.3rem; 
    line-height:1;
    color:var(--c-text-muted);
    transition:all 0.15s ease;
  }
  
  .pane .close:hover{ 
    background:var(--c-bg-muted); 
    color:var(--c-text);
  }
  
  .pane .body{ 
    padding:2rem 1.5rem; 
  }
  
  @media (max-width: 1024px){ 
    #pane-stack{ display:none } 
  }
</style>
