---
export interface Props { slug: string; title?: string; }
const { slug } = Astro.props;
---
<aside class="backlinks" data-backlinks-for={slug}>
  <h4>Links to this note</h4>
  <ul class="backlinks-list"></ul>
</aside>

<style>
  .backlinks{margin-top:3rem;padding-top:1.2rem;border-top:1px solid var(--c-border)}
  .backlinks.hidden{display:none}
  .backlinks h4{font-size:.85rem;color:var(--c-text-muted);margin:0 0 .8rem;font-weight:500}
  .backlinks li{margin:.4rem 0;font-size:.9rem}
  .backlinks a{opacity:.85}
  .backlinks a:hover{opacity:1}
</style>